{% block content %}
  <!-- Start of the content block for reviews -->
  <div id="reviews">
    <!-- Container for individual reviews -->
    <div class="container-reviews">
      <!-- Loop through each review in the 'reviews' list -->
      {% for item in items %}
        <!-- Individual review item with a unique ID based on the review's ID -->
        <div class="review-item" id="review-{{ item.id }}">

          <!-- Section for the author's information -->
          <div class="review-author-info">
            <!-- Avatar of the user -->
            <div class="avatar">{{ item.avatar }}</div>

            <!-- User's name -->
            <div class="user-name">{{ item.user_name }}</div>

            <!-- Review creation time -->
            <div class="review-created-time">{{ item.created }}</div>
          </div>

          <!-- Section for the review discussion -->
          <div class="review-disc">
            <!-- Image associated with the review -->
            <div class="review-disc-image">{{ item.review_image }}</div>

            <!-- Text content of the review -->
            <div class="review-disc-text">
              <p>{{ item.review }}</p>
            </div>
          </div>

          <!-- Section for the author's contact information -->
          <div class="review-authors-contacts">
            <!-- User's email -->
            <div class="authors-email">Email: {{ item.user_email }}</div>

            <!-- User's phone number -->
            <div class="authors-phone">Tel: +{{ item.user_phone }}</div>
          </div>

          <!-- Admin actions section (visible only if the user is an admin) -->
          {% if is_admin %}
            <div class="admin-actions">
              <!-- Edit action button -->
              <div class="edit">{{ item.edit }}</div>

              <!-- Delete action button -->
              <div class="delete">{{ item.delete }}</div>
            </div>
          {% endif %}
        </div>
      {% endfor %}

    </div>
  </div>
  <!-- End of the content block for reviews -->
{% endblock %}
